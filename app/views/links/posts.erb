<div id="posts">
  <% if current_user %>
    <div id="new_post">
      <form action='/new_post' method='post'>
        <input id="chit" type="text" name="chit" placeholder="What's up?" required>
        <input type='submit' value='Post!'>
      </form>
    </div>
  <% else %>
    <h3>You must be signed in to post</h3>
  <% end %>

  <h2>Recent Chits</h2>
  <% if @posts %>
    <% @posts.reverse.each do |post| %>
      <div id="post">
         <span id="name"><%= post.username %></span>
           - @<%= post.name %>
         <p id="body"><%= post.body %></p>
         <%= post.time %>
      </div>
    <% end %>
  <% else %>
    <p>No Chits Yet!<p>
  <% end %>

</div>
